---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import Hero from '@components/Hero.astro'
import Feature from '@components/Feature.astro'
import Counter from '@components/Counter.astro'
import ContentMedia from '@components/ContentMedia.astro'
import ExternalLink from '@components/ExternalLink.astro'
import { Accordion, AccordionItem, Avatar, AvatarGroup } from 'accessible-astro-components'
---

<DefaultLayout title="Home">
  <Hero />
  <section class="my-64">
    <div class="container">
      <h2 class="mb-16 text-6xl">Features</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
        <Feature icon="lucide:circle-check" title="Simple to Use">
          With no complex setup required, itinershare is simple to setup and get sharing with friends
        </Feature>
        <Feature icon="lucide:dollar-sign" title="No Shady Pricing">
          Pricing is simple and easy to follow. With a generous free plan to begin with.
        </Feature>
        <Feature icon="lucide:moon" title="Dark mode">
          With a 'dark by default' approach, this app doesn't blind you when you open it for the first time.
        </Feature>
      </div>
    </div>
  </section>
